<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00E4FF"
    tools:context=".danhsach.FriendActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_friend"
        android:layout_width="409dp"
        android:layout_height="274dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <ImageButton
        android:id="@+id/imgbtnNotF"
        android:layout_width="130dp"
        android:layout_height="74dp"
        android:layout_marginTop="4dp"
        android:background="@null"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/imgbtnAccept"
        android:layout_width="132dp"
        android:layout_height="73dp"
        android:layout_marginTop="4dp"
        android:background="@null"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/imgbtnProfile"
        android:layout_width="132dp"
        android:layout_height="72dp"
        android:layout_marginTop="4dp"
        android:background="@null"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toEndOf="@+id/imgbtnAccept"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/us" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_group"
        android:layout_width="406dp"
        android:layout_height="289dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rcv_friend" />

    <ImageView
        android:id="@+id/imgAdd"
        android:layout_width="70dp"
        android:layout_height="63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rcv_group"
        app:layout_constraintTop_toBottomOf="@+id/rcv_friend"
        app:layout_constraintVertical_bias="0.925"
        app:srcCompat="@drawable/ic_action_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_member"
        android:layout_width="405dp"
        android:layout_height="511dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNameGroup"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnCreateGroup"
        android:layout_width="157dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:text="Create Group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rcv_member"
        app:layout_constraintTop_toTopOf="@+id/rcv_member"
        app:layout_constraintVertical_bias="0.978" />

    <Button
        android:id="@+id/btnCancer"
        android:layout_width="124dp"
        android:layout_height="55dp"
        android:text="Cancer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rcv_member"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toStartOf="@+id/rcv_member"
        app:layout_constraintTop_toTopOf="@+id/rcv_member"
        app:layout_constraintVertical_bias="0.98" />

    <EditText
        android:id="@+id/edtNameGroup"
        android:layout_width="402dp"
        android:layout_height="74dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Name Group"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/rcv_member"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rcv_member"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar7"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>